<phpunit
    backupGlobals="true"
    backupStaticAttributes="false"
    bootstrap="Veles/Tests/bootstrap.php"
    cacheTokens="false"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    forceCoversAnnotation="false"
    mapTestClassNameToCoveredClassName="false"
    processIsolation="false"
    stopOnError="false"
    stopOnFailure="false"
    stopOnIncomplete="false"
    stopOnSkipped="false"
    strict="true"
    verbose="true">
    <testsuites>
        <testsuite name="All">
            <directory>Veles/Tests</directory>
        </testsuite>
    </testsuites>
</phpunit>
